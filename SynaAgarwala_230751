#include <iostream>
using namespace std;
int main(){
    cout<<"enter no"<<endl;
    int m;
    cin>>m;
    // int q=0;
    for(int i =0;i<m;i++)
    {
        for(int k =m;k>(i);k--)
        {
            cout<<" ";
            // q++;
        }
        for(int j=i;j>=0;j--)
        {
            cout<<(m-j);
            // q++;
        }
        cout<<endl;
    }
}
